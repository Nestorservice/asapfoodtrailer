# ASAP FOOD TRAILER - Environment Variables
# Copy this file to .env and fill in the values

# Mode: "local" for JSON data, "firebase" for Firestore
APP_MODE=local

# Firebase Configuration (required for firebase mode)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_SERVICE_ACCOUNT_PATH=serviceAccountKey.json

# Firebase Web API Key (for client-side auth)
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Admin whitelist (comma-separated emails)
ADMIN_EMAILS=admin@asapfoodtrailer.com

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Business Info
BUSINESS_NAME=ASAP Food Trailer
BUSINESS_PHONE=(786) 505-1365
BUSINESS_EMAIL=info@asapfoodtrailer.com
BUSINESS_ADDRESS=Miami, FL
BUSINESS_CITY=Miami
